<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:weightSum="5"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvDate_fm_oo_customer"
                android:textSize="14sp"
                android:text="Ngày : "
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvAdress_fm_oo_customer"
                android:textSize="14sp"
                android:text="Địa chỉ : "
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTotal_fm_oo_customer"
                android:textSize="14sp"
                android:text="Tổng đơn hàng : "
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvStatus_fm_oo_customer"
                android:textSize="14sp"
                android:text="Trạng thái : "
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bt_Cancel_fm_oo_customer"
                android:text="X"
                android:layout_gravity="top|right"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
        </LinearLayout>




    </LinearLayout>
</LinearLayout>