<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:weightSum="10">
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView_FoodOfCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_NameStoreOfCart"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="10sp"
            android:text="Tên Cửa hàng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView_NameFoodOfCart"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="Tên món ăn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView_PriceFoodOfCart"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#00fbff"
            android:textSize="10sp"
            android:text="Giá món ăn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <Button
            android:gravity="center"
            android:layout_gravity="top|right"
            android:id="@+id/button_CancelFoodOfCart"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="X"
            android:textColor="#ffffff"
            android:background="#ff00"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:background="@drawable/custom_buttton_add"
                android:gravity="center"
                android:id="@+id/button_ReduceCountFoodOfCart"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:text="-"
                android:layout_width="25dp"
                android:layout_height="45dp" />
            <TextView
                android:id="@+id/textView_CountFoodOfCart"
                android:inputType="number"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="45dp" />
            <Button
                android:background="@drawable/custom_buttton_add"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/button_IncreaseCountFoodOfCart"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="+"
                android:textColor="#ffffff"
                android:layout_width="25dp"
                android:layout_height="45dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>