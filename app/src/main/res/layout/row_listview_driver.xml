<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:weightSum="4">
    <LinearLayout
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewDate_ListView_DriverActivity"
            android:textSize="14sp"
            android:text="Ngày : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textView_NameCustomer_ListView_DriverActivity"
            android:textSize="14sp"
            android:text="Tên KH : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textView_AddresCustomer_ListView_DriverActivity"
            android:textSize="14sp"
            android:text="Địa chỉ : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_Total_ListView_DriverActivity"
            android:textSize="14sp"
            android:text="Tổng đơn hàng : "
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/button_ReceiveOrder"
            android:text="Nhận đơn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>>

</LinearLayout>