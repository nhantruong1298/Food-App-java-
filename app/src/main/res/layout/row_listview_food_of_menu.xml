<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:weightSum="10">
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView_FoodOfMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_NameFoodOfMenu"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="10sp"
            android:text="Tên món ăn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView_PriceFoodOfMenu"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="10sp"
            android:textColor="#00dcfd"
            android:text="Giá món ăn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
       android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <Button
            android:background="@drawable/custom_buttton_add"
            android:id="@+id/button_AddFoodOfMenu"
            android:textSize="20sp"
            android:text="+"
            android:textColor="#ffffff"
            android:layout_width="40dp"
            android:layout_height="45dp" />
    </LinearLayout>


</LinearLayout>